<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionHistoryActivity">

    <!--WeTrade Logo-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="WeTrade"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Slogan-->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="We trade what you want."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="384dp"
        android:layout_height="500dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="4dp"
                android:gravity="center">


                <TextView
                    android:id="@+id/instructionPara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Status "
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="4dp"
                android:gravity="left">

                <!--<ImageView
                    android:id="@+id/a1Card"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp"
                    android:src="" />-->

                <ImageView
                    android:id="@+id/a2Card"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/televsion" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Happy TV Store\nStatus: Order Dispatched\nRef.No.: 12341234123"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="1dp"
                android:gravity="left">

                <!--<ImageView
                    android:id="@+id/b1Card"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/bag" />-->

                <ImageView
                    android:id="@+id/b2Card"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/womenshoes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Big Shoe Store\nStatus: Order Delivered\nRef.No.: 12341234122"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="1dp"
                android:gravity="left">

               <!-- <ImageView
                    android:id="@+id/c1Card"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/bag" />-->

                <ImageView
                    android:id="@+id/c2Card"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/machine" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electronics Store\nStatus: Order Complete\nRef.No.: 12341234121"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="1dp"
                android:gravity="left">

               <!-- <ImageView
                    android:id="@+id/d1Card"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/bag" />-->

                <ImageView
                    android:id="@+id/d2Card"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/mobilephone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electronics Store\nStatus: Order Complete\nRef.No.: 12341234120"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="1dp"
                android:gravity="left">

                <!--<ImageView
                    android:id="@+id/e1Card"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/bag" />-->

                <ImageView
                    android:id="@+id/e2Card"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/bag" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Happy Bag Store\nStatus: Order Complete\nRef.No.: 12341234120"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="1dp"
                android:gravity="left">

                <ImageView
                    android:id="@+id/f1Card"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/bag" />

                <!--<ImageView
                    android:id="@+id/f2Card"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/bag" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Happy Bag Store\nStatus: Order Complete\nRef.No.: 12341234119"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

            </TableRow>

        </LinearLayout>
    </ScrollView>


    <ImageView
        android:id="@+id/home"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:srcCompat="@drawable/home" />

    <TextView
        android:id="@+id/homeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="Home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="65dp"
        app:layout_constraintStart_toEndOf="@+id/home"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:srcCompat="@drawable/star_icon" />


    <TextView
        android:id="@+id/starLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="Following"
        app:layout_constraintStart_toEndOf="@+id/homeLabel"
        app:layout_constraintTop_toBottomOf="@+id/star" />

    <ImageView
        android:id="@+id/add"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toEndOf="@+id/star"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:srcCompat="@drawable/add_create_new_plus_icon" />

    <TextView
        android:id="@+id/addLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="Upload"
        app:layout_constraintStart_toEndOf="@+id/starLabel"
        app:layout_constraintTop_toBottomOf="@+id/add" />

    <ImageView
        android:id="@+id/humanIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toEndOf="@+id/add"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:srcCompat="@drawable/humanicon" />

    <TextView
        android:id="@+id/meLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:text="Me"
        app:layout_constraintStart_toEndOf="@+id/addLabel"
        app:layout_constraintTop_toBottomOf="@+id/humanIcon" />


    <ImageView
        android:id="@+id/accountSettings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="66dp"
        app:layout_constraintStart_toEndOf="@+id/humanIcon"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:srcCompat="@drawable/account_settings" />

    <TextView
        android:id="@+id/settingsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:text="Settings"
        app:layout_constraintStart_toEndOf="@+id/meLabel"
        app:layout_constraintTop_toBottomOf="@+id/accountSettings" />


</androidx.constraintlayout.widget.ConstraintLayout>